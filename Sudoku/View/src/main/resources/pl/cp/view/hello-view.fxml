<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.cp.view.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <MenuBar>
     <menus>
       <Menu mnemonicParsing="false" text="Language">
         <items>
           <MenuItem fx:id="englishChoice" mnemonicParsing="false" onAction="#onEnglishItemClick" text="English" />
               <MenuItem fx:id="polishChoice" mnemonicParsing="false" onAction="#onPolishItemClick" text="Polski" />
         </items>
       </Menu>
       <Menu mnemonicParsing="false" text="Help">
         <items>
           <MenuItem mnemonicParsing="false" text="About" />
         </items>
       </Menu>
     </menus>
   </MenuBar>
   <Label fx:id="diffLabel" alignment="TOP_CENTER" prefHeight="33.0" prefWidth="185.0" text="Choose difficulty">
      <font>
         <Font size="25.0" />
      </font>
      <cursor>
         <Cursor fx:constant="NONE" />
      </cursor>
   </Label>
   <Button fx:id="easy" mnemonicParsing="false" onAction="#onEasyButtonClick" prefHeight="50.0" prefWidth="100.0" text="Easy">
      <font>
         <Font size="20.0" />
      </font>
   </Button>
   <Button fx:id="medium" mnemonicParsing="false" onAction="#onMediumButtonClick" prefHeight="50.0" prefWidth="100.0" text="Medium">
      <font>
         <Font size="20.0" />
      </font>
   </Button>
   <Button fx:id="hard" mnemonicParsing="false" onAction="#onHardButtonClick" prefHeight="50.0" prefWidth="100.0" text="Hard">
      <font>
         <Font size="20.0" />
      </font>
   </Button>

    <Label fx:id="welcomeText" />
</VBox>
