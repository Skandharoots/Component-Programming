   <children>
      <MenuBar layoutY="1.0" prefHeight="26.0" prefWidth="500.0">
         <menus>
            <Menu fx:id="langMenu" mnemonicParsing="false" text="%langMenu.text">
               <items>
                  <MenuItem fx:id="englishChoice" mnemonicParsing="false" onAction="#onEnglishItemClick" text="%englishChoice.text" />
                  <MenuItem fx:id="polishChoice" mnemonicParsing="false" onAction="#onPolishItemClick" text="%polishChoice.text" />
               </items>
            </Menu>
            <Menu fx:id="helpMenu" mnemonicParsing="false" text="%helpMenu.text">
               <items>
                  <MenuItem fx:id="aboutItem" mnemonicParsing="false" onAction="#onAuthorsClick" text="%authorsChoice.text" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <Label fx:id="diffLabel" alignment="TOP_CENTER" layoutX="100.0" layoutY="66.0" prefHeight="33.0" prefWidth="300.0" text="%diffLabel.text">
         <font>
            <Font size="25.0" />
         </font>
         <cursor>
            <Cursor fx:constant="NONE" />
         </cursor>
      </Label>
      <Button fx:id="easy" layoutX="174.0" layoutY="129.0" mnemonicParsing="false" onAction="#onEasyButtonClick" prefHeight="50.0" prefWidth="150.0" text="%easyButton.text">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <Button fx:id="medium" layoutX="174.0" layoutY="220.0" mnemonicParsing="false" onAction="#onMediumButtonClick" prefHeight="50.0" prefWidth="150.0" text="%mediumButton.text">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <Button fx:id="hard" layoutX="175.0" layoutY="310.0" mnemonicParsing="false" onAction="#onHardButtonClick" prefHeight="50.0" prefWidth="150.0" text="%hardButton.text">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
